<% layout("/layouts/boilerplate") %> 
        <h2>All Listings</h2>
        
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for (let listing of allListings) { %>
                <div class="card col listing-card">
                    <a href="/listings/<%= listing._id %>" class="text-decoration-none">
                        <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top"
                            alt="<%= listing.title || 'Default Listing' %>" style="height: 20rem; object-fit: cover;">

                        <div class="card-img-overlay"></div>

                        <div class="card-body">
                            <p class="card-text">
                                <strong>
                                    <%= listing.title || 'Untitled Listing' %>
                                </strong><br>
                                    &#8377; <%= listing.price?.toLocaleString("en-IN") || 'N/A' %> /night
                             </p>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
