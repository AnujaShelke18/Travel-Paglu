<% layout("/layouts/boilerplate") %>
 <body>
    <div class="row mt-3">
        <div class="col-7 offset-2">
            <h3>Create a new listing</h3>
            <form 
            method="POST" 
            action="/listings" 
            class="container needs-validation" 
            novalidate 
            enctype="multipart/form-data">
    
        <!-- Title -->
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input 
                id="title" 
                name="listing[title]" 
                placeholder="Add a catchy title" 
                type="text" 
                class="form-control" 
                required>
                <div class="valid-feedback">Title looks good!</div>
        </div>

    <!-- Description -->
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea 
                id="description" 
                name="listing[description]" 
                class="form-control" 
                required>
            </textarea>
            <div class="invalid-feedback">Please add a short description.</div>
        </div>
    
        <!-- image -->
        <div class="mb-3">
            <label for="image" class="form-label">Upload image:</label>
            <input 
                id="image" 
                name="listing[image]" 
                type="file" 
                class="form-control" 
                required/>
        </div>
    
        <!-- Price -->
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price:</label>
            <input 
                id="price" 
                name="listing[price]" 
                placeholder="1,200" 
                type = number
                class="form-control" 
                min="0" 
                step="1" 
                required>
                <div class="invalid-feedback">Please enter valid price?</div>
        </div>
    
        <!-- Country -->
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <input 
                id="country" 
                name="listing[country]" 
                placeholder="India" 
                type="text" 
                class="form-control" 
                required>
                <div class="invalid-feedback">Enter the valid country name</div>
        </div>
    </div>
    
        <!-- Location -->
        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input 
                id="location" 
                name="listing[location]" 
                placeholder="Jaipur, Rajasthan" 
                type="text" 
                class="form-control" 
                required>
                <div class="invalid-feedback">Enter the valid location</div>
        </div>
    
        <!-- Submit Button -->
        <button type="submit" class="btn btn-dark add-btn">Add Listing!</button>
        <br><br>
    </form>
        </div>
    </div>
</body>    